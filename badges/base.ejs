<svg xmlns="http://www.w3.org/2000/svg" width="500" height="800">
  <defs>
    <style></style>
  </defs>
  <style>
    svg {
      color: #777;
      font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
      font-size: 14px;
      padding: 10px;
    }

    h4 {
      margin-bottom: 10px;
    }

    hr {
      border-bottom: none;
      border-left: none;
      border-right: none;
      border-top-color: #ccc;
      border-top-width: 1.8px;
    }

    section {
      display: flex;
      flex-wrap: wrap;
      flex-direction: row;
      align-items: center;
      justify-content: flex-start;
      row-gap: 5px;
      column-gap: 5px;
    }
  </style>
  <foreignObject xmlns="http://www.w3.org/2000/svg" x="0" y="0" width="100%" height="100%">
    <% for(collection of Object.entries(badges)) { %>
      <h4><%= collection[0].split(/ +/g).map((word) => word.charAt(0).toUpperCase() + word.slice(1, collection[0].length)).join(' ') %></h4>
      <hr />
      <section>
        <% for(badge of collection[1]) { %>
          <img src="<%- badge %>" />
        <% } %>
      </section>
    <% } %>
  </foreignObject>
</svg>